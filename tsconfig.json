{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@prompt-orchestrator/core": ["./packages/core/index.ts"],
      "@prompt-orchestrator/context": ["./packages/context/index.ts"]
    }
  },
  "include": ["apps", "packages", "skills", ".cursor"],
  "exclude": ["**/tests/**", "**/*.spec.ts", "**/*.test.ts", "**/chrome-ext/**", "**/apps/web-static/**", "**/apps/vscode-ext/**", "node_modules", "dist"]
}
